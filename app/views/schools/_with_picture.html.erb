
<!-- use clearfix after the last col-md grid -->

<div class="container">
    <div class=" col-md-9 col-md-push-2">
        <div class="thumbnail">
            <%= image_tag(@school.picture_url, :size => "400x400", class: "img-responsive") %>
            <div class="caption">
                <h3><%= @school.name %></h3>
            </div>
        </div>
  </div>
    <div class=" col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <h3>Description</h3>
                    <p><%= @school.description %></p> <br/>
                    <p>Address<%= @school.address %>, <%= @school.location %></p>
                </div>
            </div>

        </div>


        <div class="col-md-8">
            <div class="thumbnail">
                <%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@school.latitude}%2C#{@school.longitude}" %>
                  <% if logged_in? %>
            <% if current_user.admin? %>
              <%= link_to "Edit", edit_school_path, 'data-no-turbolink' => true %> | 
              <%= link_to "Delete", @school, method: :delete, data: {confirm: "Are you sure?"} %> | 
              <%= link_to "Back", schools_path %>
            <% end %>
          <% end %>

          <% if !logged_in? %>
            <% if !@school.approved? %>
              <%= link_to "Edit", edit_school_path %>
            <% end %>
          <% end %>
            </div>

        </div>

        <div class="clearfix"></div>
</div>

